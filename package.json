{
  "name": "colony-player",
  "version": "1.4.0",
  "description": "Colony Player Project",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "make:win": "electron-builder --win",
    "make:mac": "electron-builder --mac",
    "make:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.yourname.colonyplayer",
    "productName": "Colony Player",
    "directories": {
      "output": "dist",
      "buildResources": "src/static"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "src/static",
        "to": "static"
      }
    ],
    "asarUnpack": [
      "static"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "src/static/icons/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "src/static/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "src/static/icons",
      "category": "Game",
      "maintainer": "Your Name",
      "description": "Colony Player Project for Linux",
      "desktop": {
        "Name": "Colony Player",
        "GenericName": "Media Player",
        "Comment": "Play media content in style",
        "Terminal": false,
        "Type": "Application",
        "Categories": "Utility;Game;"
      }
    },
    "executableName": "colony-player",
    "publish": null
  },
  "dependencies": {
    "@ruffle-rs/ruffle": "^0.1.0-nightly.2024.11.10",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "node-gyp": "^10.2.0"
  },
  "resolutions": {
    "node-gyp": "10.2.0",
    "string-width": "4.2.3"
  }
}
